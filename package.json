{
  "name": "ignite-nodejs-challenge-find-a-friend-api-2023",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/shared/infra/http/server.ts",
    "start": "node build/shared/infra/http/server.js",
    "build": "tsup src --out-dir build",
    "test:create-prisma-environment": "npm link ./prisma/vitest-environment-prisma",
    "test:install-prisma-environment": "npm link vitest-environment-prisma",
    "test": "vitest run --dir src/modules",
    "test:w": "vitest --dir src/modules",
    "pretest:e2e": "run-s test:create-prisma-environment test:install-prisma-environment",
    "test:e2e": "vitest run --dir src/shared/infra/http/controllers/pets/create",
    "test:e2e:w": "vitest --dir src/shared/infra/http",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts* --fix"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.1",
    "@fastify/jwt": "^6.7.1",
    "@fastify/static": "^6.10.0",
    "@prisma/client": "^4.12.0",
    "axios": "^1.3.5",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "fastify-multer": "^2.0.3",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@piktew/eslint-config-node": "^1.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@vitest/coverage-c8": "^0.30.0",
    "@vitest/ui": "^0.30.0",
    "eslint": "^8.38.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.12.0",
    "supertest": "^6.3.3",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.30.0"
  }
}
